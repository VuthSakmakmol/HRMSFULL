{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": [                      /* ‚Üê now nested properly */
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": ["src/**/*"]        /* optional, but recommended to tell VS Code what to cover */
}
